@{
	ViewData["Title"] = "Đăng bai";
	Layout = "~/Views/Shared/User/_Layout.cshtml";
}
<div id="frontend-features" class="page-content">
	<div class="page-heading">
		<div class="container clearfix">
			<h1 class="pull-left">Form Components</h1>

			<ol class="breadcrumb pull-right">

				<li><a href="index.html">Home</a></li>
				<li><a href="#">Advanced Forms</a></li>
				<li class="active"><a href="ui-forms.html">Form Components</a></li>

			</ol>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<div class="sidebar mb40">
					<nav role="navigation" class="widget-body">
						<ul class="acc-menu">
							<li><a href="layout-grids.html"><i class="fa fa-user"></i><span>
										@ViewBag.UserName</span></a></li>

							<li><a href="javascript:;"><i class="fa fa-table"></i><span>Đăng mới</span></a>

							</li>
							<li><a href="javascript:;"><i class="fa fa-bar-chart-o"></i><span>Danh sách tin</span></a>
							</li>
							<li><a href="javascript:;"><i class="fa fa-map-marker"></i><span>Nháp</span></a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
			<div class="col-md-9">

				<form method="post" asp-area="User" asp-action="Add" asp-controller="Motel"
					enctype="multipart/form-data">

					<div id="">
						<!--Thông tin cơ bản-->
						<div class="panel-front panel-default" data-widget-editbutton="false" id="p1">
							<div class="panel-heading">
								<h2>Thông tin cơ bản</h2>
							</div>
							<div class="panel-body">

								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Tỉnh, thành phố</label>
										<select class="form-control" id="source">
											<option value="1">Hà Nội</option>
											<option value="2">Hồ Chí Minh</option>
											<option value="3">Đà Nẵng</option>
										</select>
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Quận, huyện</label>
										<select class="form-control" id="source">
											<option value="NJ">Đông Anh</option>
											<option value="NY">Mê Linh</option>
											<option value="NC">Hai Bà Trưng</option>
										</select>
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Phường, xã</label>
										<select class="form-control" id="source">
											<option value="NJ">ĐỊnh Công</option>
											<option value="NY">Trung Kính</option>
											<option value="NC">Yên Hòa</option>
										</select>
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Đường, phố</label>
										<select class="form-control" id="source">
											<option value="NJ">Lê Trọng Tấn</option>
											<option value="NY">Quang Trung</option>
											<option value="NC">Kim Đồng</option>
										</select>
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class=" control-label">Địa chỉ hiển thị trên tin đăng</label>
										<textarea class="form-control" name="Address_post"></textarea>
									</div>
								</div>
							</div>
						</div>
						<!--end Thông tin cơ bản-->


						<!-- Thông bài viết-->
						<div class="panel-front panel-default demo-icheck" data-widget-editbutton="false" id="p2">
							<div class="panel-heading">
								<h2>Thông tiin bài viết</h2>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<div class="col-sm-12">
										<label class=" control-label">Tiêu đề</label>
										<textarea class="form-control" name="Title"></textarea>
										<p class="help-block">Tối thiểu 30 ký tự, Tối da 99 ký tự</p>

									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class=" control-label">Mô tả</label>
										<textarea class="form-control" rows="5" name="Description"></textarea>
										<p class="help-block">Tối thiểu 30 ký tự, Tối da 3 000 ký tự</p>
									</div>
								</div>
							</div>
						</div>
						<!-- End Thông bài viết-->


						<!-- Thông phòng trọ-->
						<div class="panel-front panel-default demo-icheck" data-widget-editbutton="false" id="p2">
							<div class="panel-heading">
								<h2>Thông phòng trọ</h2>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Diện tích</label>
										<div class="input-group">
											<input type="text" class="form-control" name="Acreage">
											<span class="input-group-addon">m&sup2</span>
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Mức giá</label>
										<input type="text" name="Price" class="form-control typeahead example-countries"
											placeholder="Nhập giá, VD 12000000">
									</div>
								</div>
							</div>
						</div>
						<!-- End Thông phòng trọ-->

						<!--Hình ảnh-->
						<div class="panel-front panel-default demo-icheck" data-widget-editbutton="false" id="p2">
							<div class="panel-heading">
								<h2>Hình ảnh</h2>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Hình ảnh</label>
										<div class="fileinput fileinput-new" style="width: 100%;"
											data-provides="fileinput">
											<div class="fileinput-preview thumbnail mb20" data-trigger="fileinput"
												style="width: 100%; height: 150px;"></div>
											<div>
												<a href="#" class="btn btn-default fileinput-exists"
													data-dismiss="fileinput">Remove</a>
												<span class="btn btn-default btn-file"><span
														class="fileinput-new">Select image</span><span
														class="fileinput-exists">Change</span><input type="file"
														name="Images"></span>

											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!--Hình ảnh-->

						<!--Thông tin liên hệ-->
						<div class="panel-front panel-default demo-icheck" data-widget-editbutton="false" id="p2">
							<div class="panel-heading">
								<h2>Thông tin liên hệ</h2>
							</div>
							<div class="panel-body">
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Tên liên hệ</label>
										<input type="text" name="Name" class="form-control typeahead example-countries"
											placeholder="Nhập tên">
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Số điện thoại</label>
										<input type="text" name="Phone" class="form-control typeahead example-countries"
											placeholder="Nhập SĐT">
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Địa chỉ</label>
										<input type="text" name="Address"
											class="form-control typeahead example-countries" placeholder="Nhập địa chỉ">
									</div>
								</div>
								<div class="form-group">
									<div class="col-sm-12">
										<label class="control-label">Email</label>
										<input type="text" name="Email" class="form-control typeahead example-countries"
											placeholder="Nhập Email">
									</div>
								</div>
							</div>
						</div>
						<!--Thông tin liên hệ-->
						<button type="submit" class="btn btn-info">Submit</button>

					</div>
				</form>

			</div>
		</div>
	</div>
</div>
