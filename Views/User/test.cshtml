@{
	ViewData["Title"] = "Nhà trọ";
	Layout = "~/Views/Shared/User/_Layout.cshtml";
}
<div class="page-content">
	<div class="page-heading">
		<div class="container clearfix">
			<h1 class="">Tin đăng đã lưu</h1>
			<span>Tổng sô @ViewBag.count tin đăng</span>

			<ol class="breadcrumb pull-right">

				<li><a href="index-2.html">Home</a></li>
				<li><a href="#">Blog</a></li>
				<li class="active"><a href="features-boxes.html">Blog Page</a></li>

			</ol>
		</div>
	</div>


	<div class="container">
		<div class="row blog" id="motel-favourite">
			<div class="col-md-9">
				<div class="row">
					<div class="col-md-12">
						<div class="form-group pull-right">
							<div class="col-sm-12">
								<form method="post" asp-controller="Motel" asp-action="Arrange">
									<select class="form-control" id="source" name="value">
										<option value="">Sắp xếp</option>
										<option value="increase_price">Sắp xếp tăng tiền</option>
										<option value="discount_price">Sắp xếp giảm tiền</option>
									</select>
									<button type="submit" class="btn btn-info">Submit</button>
								</form>
							</div>
						</div>
					</div>
				</div>
				@foreach (var motel in Model)
				{
					<div class="blog-post-list row">
						<div class="col-md-4">
							<img class="img-responsive img-rounded" decoding="async" src="~/Images/@motel.Id/@motel.Image"
								asp-append-version="true" width="300px" height="127px" />
						</div>
						<div class="col-md-8">
							<h2>
								<a asp-action="Detail" asp-controller="Motel" asp-area="User" asp-route-id="@motel.Id">
									@motel.Title
								</a>
							</h2>
							<ul class="list-inline list-unstlyed post-info">
								<li><i class="fa fa-user"></i>@motel.Price</li>
								<li><i class="fa fa-clock-o"></i>@(motel.Acreage.ToString() + " m\u00B2")</li>
								<li><i class="fa fa-comment-o"></i><a href="#">Thiết bị</a></li>
							</ul>
							<span>@motel.Address_post</span>
							<p>@motel.Description</p>
						</div>
					</div>
					<hr>
				}


				<div class="clearfix">
					<ul class="pagination mt0 mb20 pull-right">
						<li class="disabled"><a href="#"><i class="fa fa-angle-left"></i></a></li>
						<li class="active"><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#">5</a></li>
						<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="col-md-3">

				<div class="panel panel-default">
					<form method="post" asp-controller="Motel" asp-action="Search">
						<div>
							<div style="margin-top: 3px;">
								<span style="margin: auto;" class="input-group-text" id="inputGroup-sizing-sm">Địa chỉ
								</span>
								<input type="text" class="form-control" placeholder="Địa chỉ" aria-label="Username"
									aria-describedby="addon-wrapping" id="Address" name="Address" value="">
							</div>
						</div>
						<div style="margin-top: 3px;">
							<span style="margin: auto;" class="input-group-text" id="inputGroup-sizing-sm">Giá thấp
								nhất</span>
							<input s type="text" class="form-control" placeholder="Nhập giá thấp nhất"
								aria-label="Username" aria-describedby="addon-wrapping" id="min" name="min" value="">
						</div>
						<div style="margin-top: 3px;">
							<span style="margin: auto;" class="input-group-text" id="inputGroup-sizing-sm">Giá cao
								nhất</span>
							<input type="text" class="form-control" placeholder="Nhập giá cao nhất"
								aria-label="Username" aria-describedby="addon-wrapping" id="max" name="max" value="">
						</div>
						<div style="margin-top: 3px; display: flex; justify-content: center; ">
							<input type="submit" class="btn btn-outline-dark" value="Search" />
						</div>
					</form>
					<div class="panel-heading">
						<h2>Lọc theo khoảng giá</h2>
					</div>
					<div class="panel-body panel-no-padding">

						<div class="blog-post-list">
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User" asp-route-price="1">
										Dưới 1 triệu
									</a>
								</span>
							</div>
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User" asp-route-price="3">
										1 - 3 triệu
									</a>
								</span>
							</div>
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User" asp-route-price="5">
										3 - 5 triệu
									</a>

								</span>
							</div>
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User" asp-route-price="10">
										5 - 10 triệu
									</a>
								</span>
							</div>
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User" asp-route-price="40">
										10 - 40 triệu
									</a>
								</span>
							</div>

						</div>

					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>Lọc theo diện tích</h2>
					</div>
					<div class="panel-body panel-no-padding">

						<div class="blog-post-list">
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User"
										asp-route-acreage="30">
										Dưới 30 m&sup2 </a>
								</span>
							</div>
							<div class="media">

								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User"
										asp-route-acreage="50">
										30 - 50 m&sup2 </a>

								</span>
							</div>
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User"
										asp-route-acreage="80">
										50 - 80 m&sup2 </a>

								</span>
							</div>
							<div class="media">
								<span>
									<a asp-action="Filter" asp-controller="Motel" asp-area="User"
										asp-route-acreage="100">
										80 - 100 m&sup2 </a>

								</span>
							</div>


						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

</div>
