@{
	ViewData["Title"] = "Chi tiết nhà trọ";
	Layout = "~/Views/Shared/User/_Layout.cshtml";

}
@model MotelViewModel


<div class="page-content">
	<div class="page-heading">
		<div class="container clearfix">
			<h1 class="pull-left">Chi tiết phòng trọ</h1>

			<ol class="breadcrumb pull-right">

				<li><a href="index-2.html">Home</a></li>
				<li><a href="#">Blog</a></li>
				<li class="active"><a href="features-boxes.html">Blog Page</a></li>

			</ol>
		</div>
	</div>


	<div class="container blog">
		<div class="row">
			<div class="col-md-9">
				<div class="blog-post">
					<h1><a href="#">@Model.Motel.Title</a></h1>
					<ul class="list-inline list-unstlyed post-info">
						<li><i class="fa fa-user"></i><a href="#">@Model.Motel.Address_post</a></li>

					</ul>
					<img class="img-responsive img-rounded" decoding="async"
						src="~/Images/@Model.Motel.Id/@Model.Motel.Image" asp-append-version="true" width="100%"
						height="127px" />

					<hr>
					<div class="row">
						<div class="col-md-3">
							<span>Mức giá</span><br>
							<span>@Model.Motel.Price</span>
						</div>
						<div class="col-md-3">
							<span>Diện tích</span><br>
							<span>@Model.Motel.Acreage</span>
						</div>
					</div>
					<hr>
					<h6>THông tin mô tả</h6>
					<p>@Model.Motel.Description </p>
					<span>Liên hệ chính chủ: @Model.Motel.Phone - @Model.Motel.Name</span>

					<div class="well well-sm share-story mt40 mb40">
						<div class="text-center">
							<a href="#" class="btn btn-social btn-facebook"><i class="fa fa-facebook"></i></a>
							<a href="#" class="btn btn-social btn-twitter"><i class="fa fa-twitter"></i></a>
							<a href="#" class="btn btn-social btn-reddit"><i class="fa fa-reddit"></i></a>
							<a href="#" class="btn btn-social btn-linkedin"><i class="fa fa-linkedin"></i></a>
							<a href="#" class="btn btn-social btn-googleplus"><i class="fa fa-google-plus"></i></a>
						</div>
					</div>

					<div class="col-md-12">
						<div class="row">
							<div class="col-md-12">
								<h4>Nhà trọ dành cho bạn</h4>
							</div>
						</div>
						<div class="row">
							<div class="portfolio fourcols">
								@foreach (var item in Model.ListMotel)
								{
									<div class="col-md-4 item-wrapper" data-groups='["industrial"]' data-name="Rusty">
										<div class="item">
											<img style="height: 200px !important;" class="img-responsive img-rounded" decoding="async"
												src="~/Images/@item.Id/@item.Image" asp-append-version="true"  />
											<span class="caption-wrapper">
												<span class="caption">
													<h3>@item.Title</h3>
													<p>@item.Price đ</p>
													<div class="buttons">
														<a href="#" class="btn btn-default-alt"><i
																class="fa fa-link"></i></a>
														<a href="#" class="btn btn-default-alt open-modal"><i
																class="fa fa-search-plus"></i></a>
													</div>
												</span>
											</span>
										</div>
									</div>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="list-group mb40">
					<a href="#" class="list-group-item">Chủ sở hữu: @Model.Motel.Name </a>
					<a href="#" class="list-group-item">SĐT: @Model.Motel.Phone </a>
				</div>



				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>Tìm kiếm theo từ khóa</h2>
					</div>
					<div class="panel-body tag-cloud">
						<a href="#"><span class="label label-alizarin">Nhà trọ hà nội</span></a>
						<a href="#"><span class="label label-alizarin">Nhà trọ Thanh Xuân</span></a>
						<a href="#"><span class="label label-alizarin">Thê trọ Mễ Thì</span></a>
						<a href="#"><span class="label label-alizarin">Trọ giá rẻ</span></a>
						<a href="#"><span class="label label-alizarin">Tìm trọ sinh viên</span></a>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>Khoảng giá trọ</h2>
					</div>
					<div class="panel-body panel-no-padding">

						<div class="blog-post-list">
							<div class="media">
								<div class="media-body">
									<a href="#" class="post-title">Dưới 1 triệu</a>
								</div>
							</div>
						</div>
						<div class="blog-post-list">
							<div class="media">
								<div class="media-body">
									<a href="#" class="post-title">1 - 3 triệu</a>
								</div>
							</div>
						</div>
						<div class="blog-post-list">
							<div class="media">
								<div class="media-body">
									<a href="#" class="post-title">3 - 5 triệu</a>
								</div>
							</div>
						</div>
						<div class="blog-post-list">
							<div class="media">
								<div class="media-body">
									<a href="#" class="post-title">5 - 10 triệu</a>
								</div>
							</div>
						</div>

					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>Tìm kiếm</h2>
					</div>
					<div class="panel-body">
						<p class="mb20">Từ khóa bạn cần tìm</p>
						<div class="input-group">
							<input type="text" class="form-control" placeholder="">
							<span class="input-group-btn">
								<a class="btn btn-default" href="#">Tìm kiếm</a>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
